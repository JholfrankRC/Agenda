<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NuevoActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#673AB7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:navigationIcon="@drawable/volver_flecha__1_"
        app:title="@string/app_name"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D6C6F4"
        android:elegantTextHeight="false"
        android:gravity="center_horizontal"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp"
        android:text="@string/crear_nuevo_contacto"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/ingrese_nombre"
        android:layout_width="355dp"
        android:layout_height="46dp"
        android:layout_gravity="bottom|center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"

        android:background="@drawable/custon_imput"
        android:drawableStart="@drawable/custon_usuario"
        android:ems="10"
        android:hint="@string/ingrese_nombre"
        android:inputType="text"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/purple"
        android:textColorHint="#838383"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/ingrese_numero"
        android:layout_width="356dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custon_imput"
        android:drawableStart="@drawable/custon_numero"
        android:ems="10"
        android:hint="@string/ingrese_numero"
        android:inputType="phone"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/purple"
        android:textColorHint="#838383"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/ingrese_email"
        android:layout_width="358dp"
        android:layout_height="47dp"
        android:layout_gravity="bottom|center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custon_imput"
        android:drawableStart="@drawable/custon_email"
        android:ems="10"
        android:hint="@string/ingrese_correo_electronico"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/purple"
        android:textColorHint="#838383"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_guardar"
        android:layout_width="229dp"
        android:layout_height="64dp"
        android:layout_gravity="bottom|center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/crear_nuevo_contacto" />
</LinearLayout>